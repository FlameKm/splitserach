{
  "manifest_version": 3,
  "name": "Split Search",
  "version": "1.0",
  "description": "在使用搜索引擎时，自动打开分屏来用其他引擎同步搜索",

  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "web_accessible_resources": [
    {
      "resources": ["src/content/content.css"],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "service_worker": "src/background/background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/search*",
        "*://*.google.com.hk/search*",
        "*://*.baidu.com/s*",
        "*://*.bing.com/search*",
        "*://cn.bing.com/search*",
        "*://*.so.com/s*",
        "*://*.sogou.com/web*",
        "*://fanyi.sogou.com/*"
      ],
      "js": ["src/content/content.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "icon.png"
  },

  "options_page": "src/options/options.html",

  "icons": {
    "128": "icon.png"
  }
}
